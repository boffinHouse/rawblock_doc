---
title: startpage
layout: default_tpl.hbs
---

<section class="rb-page-section">
	<div class="page-section-block is-column-group is-gutter">

		<div class="is-size-100 is-size-75-l">
			{{#with startpage.stage }}
				{{> rb_stage }}
			{{/with}}
		</div>

		<div class="is-size-100 is-size-25-l">
			{{> rb_test_teaser }}
		</div>

	</div>
</section>

<section class="rb-page-section">

	<div class="page-section-block is-column-group is-gutter">
		<div class="is-size-100 is-size-66-l">
			{{#with startpage.intro }}
				{{> rb_intro }}
			{{/with}}
		</div>
	</div>

	<div class="page-section-block is-column-group is-gutter">
		{{#each startpage.productItems }}
			<div class="is-size-33 is-size-50-m is-size-100-s">
				{{> rb_item_standard }}
			</div>
		{{/each}}
	</div>


</section>


